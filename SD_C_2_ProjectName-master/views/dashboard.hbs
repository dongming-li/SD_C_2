<body>
    <div class="container-fluid">

        <div class="float-right">
            <div class="row">
                <div class="col">
                    <button class="button_norm"><span id="name"></span></button>
                    <br>
                    <form
                            method="get"
                            action="/logout"
                    >
                        <button type="submit" style="color: blue" class="button_norm">Logout</button>
                    </form>
                </div>
                <div class="col">
                    <button class="button_norm float-right" onclick="view_switch('/profile')">
