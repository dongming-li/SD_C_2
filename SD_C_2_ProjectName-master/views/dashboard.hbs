<script>
    $(document).ready(function () {
        sessionUser();
        getProfilePic();
        trendingCourses();
    });

    $('#trending').click(function () {
        trendingCourses();
    });

    $('#top').click(function(){
        topCourses();
    });

    $('#new').click(function () {
        newCourses();
    });

    $('#twitter').click(function () {
        window.location.href = "https://twitter.com/OpenSrcStem";
    });

    $('#courses').click(function () {
        allCourses();
    });

    $('#community').click(function () {
       getCommunity();
    });

    $('#search').click(function () {
        searchForClasses();
    })

</script>
